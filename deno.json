{
  "tasks": {
    "dev": "deno run --unstable -A --watch main.ts",
    "start": "deno run --unstable -A main.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "include": ["main.ts", "src"]
  },
  "importMap": "./import_map.json"
}
